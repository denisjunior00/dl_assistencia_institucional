---
// Layout base para páginas
const { children } = Astro.props;
import '../styles/global.css';
---
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{import.meta.env.PUBLIC_SITE_TITLE || 'D&L Assistência Técnica'}</title>
    <meta name="description" content="Assistência técnica especializada em Campo Grande, MS. Conserto de eletrônicos, eletrodomésticos e mais." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Open Graph para compartilhamento -->
    <meta property="og:title" content="D&L Assistência Técnica" />
    <meta property="og:description" content="Assistência técnica especializada em segurança eletrônica e soluções para sua casa ou empresa." />
    <meta property="og:image" content="/imagens/compartilhamento.jpg" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content="{import.meta.env.PUBLIC_SITE_URL || 'https://dlassistencia.com.br'}" />
    <meta property="og:type" content="website" />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="D&L Assistência Técnica" />
    <meta name="twitter:description" content="Assistência técnica especializada em segurança eletrônica e soluções para sua casa ou empresa." />
    <meta name="twitter:image" content="/imagens/compartilhamento.jpg" />
  </head>
  <body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col">
    <slot />
  </body>
</html>

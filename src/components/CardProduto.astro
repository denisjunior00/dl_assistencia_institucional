---
import { CATALOG_LINK } from '../utils/constants';
interface CardProdutoProps {
  imagem: string;
  titulo: string;
  itens: string[];
}
const { imagem, titulo, itens } = Astro.props as CardProdutoProps;
---
<div class="bg-white rounded-xl shadow-lg overflow-hidden flex flex-col items-center transition-transform hover:-translate-y-2 hover:shadow-2xl duration-300 w-full max-w-xs mx-auto">
  <img src={imagem} alt={titulo} class="w-full h-40 object-cover" loading="lazy" />
  <div class="p-4 w-full flex flex-col items-center">
    <h3 class="text-lg md:text-xl font-bold text-blue-700 text-center mb-2">{titulo}</h3>
    <ul class="list-disc list-inside text-gray-700 text-sm md:text-base text-left w-full max-w-xs mx-auto mb-4">
      {itens.map(item => <li>{item}</li>)}
    </ul>
    <a href={CATALOG_LINK} target="_blank" class="px-6 py-2 bg-blue-700 text-white font-bold rounded shadow hover:bg-blue-800 transition-colors text-base mt-2 w-full text-center">Ver produtos</a>
  </div>
</div>

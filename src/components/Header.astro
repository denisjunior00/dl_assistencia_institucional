---
import { STORE_NAME, INSTAGRAM_LINK, FACEBOOK_LINK } from '../utils/constants';
---
<header class="w-full bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto flex items-center justify-between py-4 px-4 md:px-0">
    <div class="flex flex-col md:flex-row items-center gap-2 w-full">
      <div class="flex items-center gap-2">
        <img src="/imagens/logo.jpg" alt="Logo D&L Assistência Técnica" class="w-16 h-16 object-contain" />
        <span class="text-2xl font-bold tracking-tight text-blue-700">{STORE_NAME}</span>
      </div>
      <!-- Ícones das redes sociais removidos do topo -->
    </div>
    <!-- Menu removido conforme solicitado -->
    <!-- Ícone do menu removido conforme solicitado -->
  </div>
  <!-- Menu mobile removido conforme solicitado -->
  <script>
    const btn = document.getElementById('menu-mobile-btn');
    const menu = document.getElementById('menu-mobile');
    const closeBtn = document.getElementById('close-menu-mobile');
    if (btn && menu && closeBtn) {
      btn.addEventListener('click', () => {
        menu.style.transform = 'translateY(0)';
        menu.style.boxShadow = '0 8px 32px 0 rgba(44, 62, 80, 0.2)';
      });
      closeBtn.addEventListener('click', () => {
        menu.style.transform = 'translateY(-100%)';
        menu.style.boxShadow = 'none';
      });
      // Fecha o menu ao clicar em um link
      menu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          menu.style.transform = 'translateY(-100%)';
          menu.style.boxShadow = 'none';
        });
      });
    }
  </script>
</header>

---
import { STORE_NAME, ADDRESS, CITY, INSTAGRAM_LINK, FACEBOOK_LINK, CATALOG_LINK } from '../utils/constants';
---
<footer class="w-full bg-gray-900 text-gray-100 mt-auto">
  <div class="container mx-auto flex flex-col md:flex-row items-center justify-between py-6 px-4 md:px-0">
    <div class="flex items-center justify-start w-full md:w-auto mb-4 md:mb-0 md:justify-start justify-center">
      <img src="/imagens/logo.jpg" alt="Logo D&L Assistência Técnica" class="w-24 h-24 object-contain" />
    </div>
    <div class="flex flex-col items-center justify-center w-full md:w-auto">
      <span class="font-semibold text-lg">{STORE_NAME}</span>
      <span class="text-base">{ADDRESS} - {CITY}</span>
    </div>
    <div class="flex flex-col items-center gap-2 w-full md:w-auto mt-4 md:mt-0">
      <span class="font-semibold text-base text-gray-300 text-center">Contatos</span>
      <div class="flex gap-4 mt-1">
        <a href={CATALOG_LINK} target="_blank" aria-label="WhatsApp" class="hover:opacity-80 transition-transform transform hover:scale-110">
          <img src="/whatssapp.svg" alt="WhatsApp" class="w-7 h-7" />
        </a>
        <a href={INSTAGRAM_LINK} target="_blank" aria-label="Instagram" class="hover:opacity-80 transition-transform transform hover:scale-110">
          <img src="/instagram.svg" alt="Instagram" class="w-7 h-7" />
        </a>
        <a href={FACEBOOK_LINK} target="_blank" aria-label="Facebook" class="hover:opacity-80 transition-transform transform hover:scale-110">
          <img src="/facebook.svg" alt="Facebook" class="w-7 h-7" />
        </a>
      </div>
    </div>
  </div>
  <div class="text-center text-xs text-gray-400 pb-2 border-t border-gray-700 pt-2">&copy; {new Date().getFullYear()} {STORE_NAME}. Todos os direitos reservados.</div>
</footer>
